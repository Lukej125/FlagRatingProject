@model LogUser
<div class=" text-center d-flex justify-content-center">
  <div class="FlagForLoginReg">

  </div>
  <div class="Login">
    <h1>Login</h1>
    <form asp-action="LoginUser" asp-controller="Home" method="post">

      <div class="mb-2  ">
        <label asp-for="LEmail">Email</label>
        <input asp-for="LEmail" class="form-control">
        <span asp-validation-for="LEmail"></span>
      </div>
      <div class=" mb-2">
        <label asp-for="LPassword">Password</label>
        <input asp-for="LPassword" class="form-control">
        <span asp-validation-for="LPassword"></span>
      </div>
      <br>
      <input type="submit" class="btn btn-primary">

    </form>
  </div>
</div>